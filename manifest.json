{
    "manifest_version": 2,
    "name": "Better ctrl+f",
    "description": "An improved ctrl+f for google chrome",
    "version": "1.0",
    "icons": {
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*","https://*/*"],
          "js": ["index.js"]
        }
      ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}